{
  "theme": "new-school-theme",
  "displayName": "New School Theme",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "global": {
      "type": "page",
      "title": "Global Settings",
      "sections": {
        "site_name": {
          "title": "Site Name",
          "fields": {
            "name": {
              "type": "short-text",
              "label": "School Name",
              "required": true
            }
          }
        },
        "site_logo": {
          "title": "Site Logo",
          "fields": {
            "icon": {
              "type": "image",
              "label": "Logo Icon",
              "required": true,
              "description": "Font Awesome icon class"
            },
            "text": {
              "type": "short-text",
              "label": "Logo Text",
              "required": true,
              "description": "Logo text"
            }
          }
        },
        "navigation": {
          "title": "Navigation",
          "fields": {
            "main_menu": {
              "type": "array",
              "label": "Main Menu Items",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Menu Item Name"
                },
                "url": {
                  "type": "short-text",
                  "label": "Menu Item URL"
                },
                "type": {
                  "type": "select",
                  "label": "Menu Type",
                  "options": ["link", "dropdown"]
                },
                "items": {
                  "type": "array",
                  "items": {
                    "name": {
                      "type": "short-text",
                      "label": "Submenu Item Name"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Submenu Item URL"
                    }
                  }
                }
              }
            }
          }
        },
        "footer": {
          "title": "Footer",
          "fields": {
            "about": {
              "type": "object",
              "label": "About Section",
              "allowMultiple": false,
              "fields": {
                "description": {
                  "type": "long-text",
                  "label": "About Description"
                },
                "social_links": {
                  "type": "object",
                  "label": "Social Links",
                  "fields": {
                    "facebook": {
                      "type": "short-text",
                      "label": "Facebook URL"
                    },
                    "twitter": {
                      "type": "short-text",
                      "label": "Twitter URL"
                    },
                    "linkedin": {
                      "type": "short-text",
                      "label": "LinkedIn URL"
                    },
                    "youtube": {
                      "type": "short-text",
                      "label": "YouTube URL"
                    }
                  }
                }
              }
            },
            "quick_links": {
              "type": "array",
              "label": "Quick Links",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Link Name"
                },
                "url": {
                  "type": "short-text",
                  "label": "Link URL"
                }
              }
            }
          }
        }
      }
    },
    "home": {
      "type": "page",
      "title": "Home Page",
      "sections": {
        "hero": {
          "title": "Hero Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Hero Title",
              "required": true
            },
            "subtitle": {
              "type": "short-text",
              "label": "Hero Subtitle",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Hero Description",
              "required": true
            },
            "cta": {
              "type": "object",
              "allowMultiple": false,
              "label": "Call to Action",
              "fields": {
                "primary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Primary Button Text"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Primary Button URL"
                    }
                  }
                },
                "secondary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Secondary Button Text"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Secondary Button URL"
                    }
                  }
                }
              }
            }
          }
        },
        "events": {
          "title": "Events Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Events Section Title",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Events Section Description",
              "required": true
            },
            "items": {
              "type": "array",
              "label": "Event Items",
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Event Title",
                  "required": true
                },
                "description": {
                  "type": "long-text",
                  "label": "Event Description",
                  "required": true
                },
                "date": {
                  "type": "short-text",
                  "label": "Event Date",
                  "required": true
                },
                "time": {
                  "type": "short-text",
                  "label": "Event Time",
                  "required": true
                },
                "location": {
                  "type": "short-text",
                  "label": "Event Location",
                  "required": true
                },
                "image": {
                  "type": "image",
                  "label": "Event Image",
                  "required": true
                }
              }
            }
          }
        }
      }
    },
"about": {
      "type": "page",
      "title": "About Page",
      "sections": {
        "main": {
          "title": "Main Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Page Description",
              "minLength": 5,
              "description": "Use line breaks to separate paragraphs"
            },
            "mission": {
              "type": "long-text",
              "label": "Mission Statement",
              "minLength": 5
            },
            "vision": {
              "type": "long-text",
              "label": "Vision Statement",
              "minLength": 5
            },
            "ceo": {
              "type": "object",
              "label": "CEO Information",
              "allowMultiple": false,
              "fields": {
                "name": {
                  "type": "short-text",
                  "label": "CEO Name",
                  "required": true
                },
                "position": {
                  "type": "short-text",
                  "label": "CEO Position",
                  "required": true
                },
                "image": {
                  "type": "image",
                  "label": "CEO Image"
                }
              }
            }
          }
        }
      }
    }
  },
  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    },
    "file": {
      "allowedTypes": ["application/pdf"],
      "maxSize": 10485760
    }
  }
}