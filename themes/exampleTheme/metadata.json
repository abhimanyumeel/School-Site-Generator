{
  "theme": "exampleTheme",
  "displayName": "Modern School Theme",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "home": {
      "type": "page",
      "title": "Home Page",
      "sections": {
        "hero": {
          "title": "Hero Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Hero Title",
              "required": true,
              "minLength": 5,
              "maxLength": 15,
              "default": "Welcome to Our School"
            },
            "subtitle": {
              "type": "short-text",
              "label": "Hero Subtitle",
              "required": true,
              "minLength": 5,
              "maxLength": 100,
              "default": "Empowering Minds, Shaping Futures"
            },
            "buttons": {
              "type": "array",
              "label": "Call to Action Buttons",
              "minCount": 1,
              "maxCount": 2,
              "items": {
                "text": "short-text",
                "url": "url",
                "style": "select:primary,secondary"
              }
            },
            "backgroundImage": {
              "type": "image",
              "label": "Hero Background",
              "required": true,
              "ratio": "21:9",
              "showCroppingTool": true,
              "minWidth": 1920,
              "minHeight": 1080,
              "description": "Large banner image for hero section"
            },
            "carousel": {
              "type": "image-set",
              "label": "Hero Carousel",
              "required": false,
              "minCount": 1,
              "maxCount": 5,
              "ratio": "16:9",
              "showCroppingTool": true,
              "minWidth": 1200,
              "minHeight": 675,
              "description": "Slideshow images for hero section"
            }
          }
        },
        "features": {
          "title": "Features Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "required": false,
              "default": "Why Choose Us"
            },
            "items": {
              "type": "array",
              "label": "Features",
              "required": false,
              "minCount": 2,
              "maxCount": 6,
              "items": {
                "title": "short-text",
                "description": "long-text",
                "icon": "select:academics,sports,arts,library,labs,transport"
              }
            }
          }
        },
        "gallery": {
          "title": "Photo Gallery",
           "fields": {
              "title": {
                "type": "short-text",
                "label": "Gallery Title",
                "default": "Our Gallery"
            },
            "description": {
              "type": "long-text",
              "label": "Gallery Description"
            },
            "images": {
              "type": "image-set",
              "label": "Gallery Images",
              "minCount": 6,
              "maxCount": 24,
              "ratio": "4:3",
              "showCroppingTool": true,
              "layout": "grid",
              "thumbnailSize": "medium"
            }
          }
        },
        "news": {
          "title": "News Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "required": true,
              "default": "Latest News & Events"
            },
            "subtitle": {
              "type": "short-text",
              "label": "Section Subtitle",
              "required": false,
              "default": "Stay updated with the latest news and events from our school",
              "maxLength": 150
            },
            "articles": {
              "type": "array",
              "label": "News Articles",
              "required": false,
              "minCount": 1,
              "maxCount": 6,
              "items": {
                "title": "short-text",
                "summary": "long-text",
                "date": "date",
                "image": {
                  "type": "image",
                  "label": "Article Image",
                  "ratio": "16:9",
                  "showCroppingTool": true
                },
                "category": "select:News,Events,Announcements,Alerts,Academic,Sports,Culture,Other"
              }
            }
          }
        },
        "stats": {
          "title": "Statistics Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "required": true,
              "default": "School Statistics"
            },
            "items": {
              "type": "array",
              "label": "Statistics Items",
              "required": true,
              "minCount": 3,
              "maxCount": 4,
              "items": {
                "number": {
                  "type": "number",
                  "label": "Number",
                  "required": true
                },
                "label": {
                  "type": "short-text",
                  "label": "Label",
                  "required": true
                },
                "icon": {
                  "type": "select",
                  "label": "Icon",
                  "required": true,
                  "options": ["student", "teacher", "classroom", "school", "achievement", "award", "certificate", "degree", "diploma", "education", "graduation", "school-bus", "school-building", "school-library", "school-uniform", "student-achievement", "student-award", "student-certificate", "student-diploma", "student-degree", "student-graduation", "student-school-bus", "student-school-building", "student-school-library", "student-school-uniform"]
                }
              }
            }
          }
        },
        "testimonials": {
          "title": "Testimonials Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "What People Say"
            },
            "items": {
              "type": "array",
              "label": "Testimonials",
              "required": true,
              "minCount": 2,
              "maxCount": 6,
              "items": {
                "quote": {
                  "type": "long-text",
                  "label": "Testimonial Quote",
                  "required": true
                },
                "name": {
                  "type": "short-text",
                  "label": "Person Name",
                  "required": true
                },
                "role": {
                  "type": "short-text",
                  "label": "Relation",
                  "required": true
                },
                "avatar": {
                  "type": "image",
                  "label": "Person Avatar",
                  "ratio": "1:1",
                  "showCroppingTool": true
                }
              }
            }
          }
        }
      }
    },
    "about": {
      "type": "page",
      "title": "About Page",
      "sections": {
        "mission": {
          "title": "Mission Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "required": true,
              "default": "Our Mission"
            },
            "missionStatement": {
              "type": "long-text",
              "label": "Mission Statement",
              "required": true,
              "minLength": 50,
              "maxLength": 500
            }
          }
        },
        "values": {
          "title": "Values Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "Our Core Values"
            },
            "items": {
              "type": "array",
              "label": "Value Items",
              "required": true,
              "minCount": 3,
              "maxCount": 6,
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Value Title",
                  "required": true
                },
                "description": {
                  "type": "long-text",
                  "label": "Value Description",
                  "required": true
                },
                "icon": {
                  "type": "select",
                  "label": "Value Icon",
                  "options": ["excellence", "integrity", "innovation", "leadership", "diversity", "community"]
                }
              }
            }
          }
        },
        "team": {
          "title": "Team Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "Our Leadership Team"
            },
            "members": {
              "type": "array",
              "label": "Team Members",
              "required": true,
              "minCount": 1,
              "maxCount": 12,
              "items": {
                "name": "short-text",
                "role": "short-text",
                "bio": "long-text",
                "photo": {
                  "type": "image",
                  "label": "Profile Photo",
                  "ratio": "1:1",
                  "showCroppingTool": true
                },
                "qualifications": "short-text"
              }
            }
          }
        }
      }
    },

    "contact": {
      "type": "page",
      "title": "Contact Page",
      "sections": {
        "info": {
          "title": "Contact Information",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "default": "Contact Us"
            },
            "contactInfo": {
              "type": "object",
              "fields": {
                "address": {
                  "type": "long-text",
                  "label": "School Address",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "label": "Phone Number",
                  "required": true
                },
                "email": {
                  "type": "email",
                  "label": "Email Address",
                  "required": true
                },
                "officeHours": {
                  "type": "short-text",
                  "label": "Office Hours",
                  "required": true
                }
              }
            },
            "mapEmbed": {
              "type": "html",
              "label": "Google Maps Embed",
              "required": false
            }
          }
        }
      }
    }
  },
  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    }
  }
}
