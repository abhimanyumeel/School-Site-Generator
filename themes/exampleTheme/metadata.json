{
  "theme": "exampleTheme",
  "displayName": "Modern School Theme",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "home": {
      "title": "Homepage",
      "sections": {
        "hero": {
          "title": "Hero Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Hero Title",
              "required": true,
              "minLength": 10,
              "maxLength": 100,
              "default": "Welcome to Our School"
            },
            "subtitle": {
              "type": "short-text",
              "label": "Hero Subtitle",
              "required": true,
              "minLength": 10,
              "maxLength": 200,
              "default": "Empowering Minds, Shaping Futures"
            },
            "buttons": {
              "type": "array",
              "label": "Call to Action Buttons",
              "minCount": 1,
              "maxCount": 2,
              "items": {
                "text": "short-text",
                "url": "url",
                "style": "select:primary,secondary"
              }
            },
            "backgroundImage": {
              "type": "image",
              "label": "Hero Background",
              "required": true,
              "ratio": "21:9",
              "showCroppingTool": true,
              "minWidth": 1920,
              "minHeight": 1080,
              "description": "Large banner image for hero section"
            },
            "carousel": {
              "type": "image-set",
              "label": "Hero Carousel",
              "required": false,
              "minCount": 1,
              "maxCount": 5,
              "ratio": "16:9",
              "showCroppingTool": true,
              "minWidth": 1200,
              "minHeight": 675,
              "description": "Slideshow images for hero section"
            }
          }
        },
        "features": {
          "title": "Features Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "Why Choose Us"
            },
            "items": {
              "type": "array",
              "label": "Feature Items",
              "minCount": 3,
              "maxCount": 6,
              "items": {
                "icon": {
                  "type": "image",
                  "ratio": "1:1",
                  "showCroppingTool": true
                },
                "title": "short-text",
                "description": "long-text"
              }
            }
          }
        },
        "gallery": {
          "title": "Photo Gallery",
           "fields": {
              "title": {
                "type": "short-text",
                "label": "Gallery Title",
                "default": "Our Gallery"
            },
            "description": {
              "type": "long-text",
              "label": "Gallery Description"
            },
            "images": {
              "type": "image-set",
              "label": "Gallery Images",
              "minCount": 6,
              "maxCount": 24,
              "ratio": "4:3",
              "showCroppingTool": true,
              "layout": "grid",
              "thumbnailSize": "medium"
            }
          }
        },
        "news": {
          "title": "News Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "Latest News"
            },
            "articles": {
              "type": "array",
              "label": "News Articles",
              "minCount": 1,
              "maxCount": 3,
              "items": {
                "image": {
                  "type": "image",
                  "ratio": "16:9",
                  "showCroppingTool": true
                },
                "title": "short-text",
                "summary": "long-text",
                "date": "date"
              }
            }
          }
        },
        "stats": {
          "title": "Statistics Section",
          "fields": {
            "items": {
              "type": "array",
              "label": "Statistics",
              "minCount": 3,
              "maxCount": 4,
              "items": {
                "number": "number",
                "label": "short-text"
              }
            }
          }
        },
        "testimonials": {
          "title": "Testimonials Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "default": "What People Say"
            },
            "items": {
              "type": "array",
              "label": "Testimonials",
              "minCount": 2,
              "maxCount": 6,
              "items": {
                "quote": "long-text",
                "name": "short-text",
                "role": "short-text",
                "avatar": {
                  "type": "image",
                  "ratio": "1:1",
                  "showCroppingTool": true
                }
              }
            }
          }
        }
      }
    },
    "about": {
      "title": "About Page",
      "sections": {
        "mission": {
          "title": "Mission Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "default": "About Us"
            },
            "missionStatement": {
              "type": "long-text",
              "label": "Mission Statement",
              "required": true,
              "minLength": 50,
              "maxLength": 500
            }
          }
        },
        "values": {
          "title": "Values Section",
          "fields": {
            "items": {
              "type": "array",
              "label": "Our Values",
              "minCount": 3,
              "maxCount": 6,
              "items": {
                "title": "short-text",
                "description": "long-text"
              }
            }
          }
        },
        "team": {
          "title": "Team Section",
          "fields": {
            "members": {
              "type": "array",
              "label": "Team Members",
              "minCount": 1,
              "maxCount": 12,
              "items": {
                "photo": {
                  "type": "image",
                  "ratio": "1:1",
                  "showCroppingTool": true
                },
                "name": "short-text",
                "role": "short-text",
                "bio": "long-text"
              }
            }
          }
        }
      }
    },
    "contact": {
      "title": "Contact Page",
      "sections": {
        "info": {
          "title": "Contact Information",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "default": "Contact Us"
            },
            "contactInfo": {
              "type": "object",
              "fields": {
                "address": {
                  "type": "long-text",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "required": true,
                  "pattern": "^[+]?[(]?[0-9]{3}[)]?[-\\s.]?[0-9]{3}[-\\s.]?[0-9]{4,6}$"
                },
                "email": {
                  "type": "email",
                  "required": true
                }
              }
            },
            "mapEmbed": {
              "type": "html",
              "label": "Google Maps Embed",
              "required": false
            }
          }
        }
      }
    }
  },
  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    }
  }
}
