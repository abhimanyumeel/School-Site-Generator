{
  "theme": "school-temp-2",
  "displayName": "School Template 2",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "global": {
      "type": "page",
      "title": "Global Settings",
      "sections": {
        "site_name": {
          "title": "Site Name",
          "fields": {
            "name": {
              "type": "short-text",
              "label": "School Name",
              "required": true,
              "description": "Name of the school"
            }
          }
        },
        "site_logo": {  
          "title": "Site Logo",
          "fields": {
            "icon": {
              "type": "image",
              "label": "Logo Icon",
              "required": true,
              "description": "Font Awesome icon class"
            },
            "text": {
              "type": "short-text",
              "label": "Logo Text",
              "required": true,
              "description": "Logo text"
            }
          }
        },
        "navigation": {
          "title": "Navigation",
          "fields": {
            "main_menu": {
              "type": "array",
              "label": "Main Menu Items",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Menu Item Name"
                },
                "url": {
                  "type": "short-text",
                  "label": "Menu Item URL"
                },
                "type": {
                  "type": "select",
                  "options": ["link", "dropdown"]
                },
                "items": {
                  "type": "array",
                  "items": {
                    "name": {
                      "type": "short-text",
                      "label": "Submenu Item Name"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Submenu Item URL"
                    }
                  }
                }
              }
            }
          }
        },
        "footer": {
          "title": "Footer",
          "fields": {
            "about": {
              "type": "object",
              "label": "About",
              "fields": {
                "description": {
                  "type": "long-text",
                  "label": "About Description"
                },
                "social_links": {
                  "type": "object",
                  "fields": {
                    "facebook": {
                      "type": "short-text",
                      "label": "Facebook URL"
                    },
                    "twitter": {
                      "type": "short-text",
                      "label": "Twitter URL"
                    },
                    "linkedin": {
                      "type": "short-text",
                      "label": "LinkedIn URL"
                    },
                    "youtube": {
                      "type": "short-text",
                      "label": "YouTube URL"
                    }
                  }
                }
              }
            },
            "quick_links": {
              "type": "array",
              "label": "Quick Links",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Link Name"
                },
                "url": {
                  "type": "short-text",
                  "label": "Link URL"
                }
              }
            },
            "newsletter": {
              "type": "object",
              "fields": {
                "title": {
                  "type": "short-text",
                  "label": "Newsletter Title"
                },
                "description": {
                  "type": "long-text",
                  "label": "Newsletter Description"
                },
                "button_text": {
                  "type": "short-text",
                  "label": "Subscribe Button Text"
                }
              }
            }
          }
        }
      }
    },
    "home": {
      "type": "page",
      "title": "Home Page",
      "sections": {
        "hero": {
          "title": "Hero Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Hero Title",
              "required": true
            },
            "subtitle": {
              "type": "short-text",
              "label": "Hero Subtitle",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Description",
              "required": true
            },
            "cta": {
              "type": "object",
              "fields": {
                "primary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Primary Button Text"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Primary Button URL"
                    }
                  }
                },
                "secondary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Secondary Button Text"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Secondary Button URL"
                    }
                  }
                }
              }
            }
          }
        },
        "featured_classes": {
          "title": "Featured Classes",
          "fields": {
            "items": {
              "type": "array",
              "label": "Classes",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Class Name"
                },
                "age_group": {
                  "type": "short-text",
                  "label": "Age Group"
                },
                "time": {
                  "type": "short-text",
                  "label": "Time"
                },
                "capacity": {
                  "type": "short-text",
                  "label": "Capacity"
                },
                "price": {
                  "type": "short-text",
                  "label": "Price"
                },
                "image": {
                  "type": "image",
                  "label": "Class Image"
                },
                "teacher": {
                  "type": "object",
                  "fields": {
                    "name": {
                      "type": "short-text",
                      "label": "Teacher Name"
                    },
                    "image": {
                      "type": "image",
                      "label": "Teacher Image"
                    },
                    "position": {
                      "type": "short-text",
                      "label": "Position"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "about": {
      "type": "page",
      "title": "About Page",
      "sections": {
        "main": {
          "title": "Main Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "required": true
            },
            "description": {
              "type": "array",
              "label": "Description Paragraphs",
              "items": {
                "type": "long-text"
              }
            },
            "ceo": {
              "type": "object",
              "fields": {
                "name": {
                  "type": "short-text",
                  "label": "CEO Name"
                },
                "position": {
                  "type": "short-text",
                  "label": "Position"
                },
                "image": {
                  "type": "image",
                  "label": "CEO Image"
                }
              }
            }
          }
        },
        "mission": {
          "title": "Mission",
          "fields": {
            "statement": {
              "type": "long-text",
              "label": "Mission Statement",
              "required": true
            }
          }
        },
        "vision": {
          "title": "Vision",
          "fields": {
            "statement": {
              "type": "long-text",
              "label": "Vision Statement",
              "required": true
            }
          }
        },
        "core_values": {
          "title": "Core Values",
          "fields": {
            "values": {
              "type": "array",
              "label": "Values",
              "items": {
                "type": "short-text"
              }
            }
          }
        }
      }
    },
    "facilities": {
      "type": "page",
      "title": "Facilities Page",
      "sections": {
        "main": {
          "title": "Facilities Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description"
            },
            "items": {
              "type": "array",
              "label": "Facility Items",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Facility Name"
                },
                "description": {
                  "type": "long-text",
                  "label": "Facility Description"
                },
                "features": {
                  "type": "array",
                  "items": {
                    "type": "short-text"
                  }
                },
                "icon": {
                  "type": "short-text",
                  "label": "Facility Icon"
                }
              }
            }
          }
        }
      }
    },
    "team": {
      "type": "page",
      "title": "Team Page",
      "sections": {
        "main": {
          "title": "Team Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description"
            },
            "members": {
              "type": "array",
              "label": "Team Members",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Member Name"
                },
                "position": {
                  "type": "short-text",
                  "label": "Position"
                },
                "image": {
                  "type": "image",
                  "label": "Member Image"
                },
                "social": {
                  "type": "object",
                  "fields": {
                    "linkedin": {
                      "type": "short-text",
                      "label": "LinkedIn URL"
                    },
                    "twitter": {
                      "type": "short-text",
                      "label": "Twitter URL"
                    },
                    "email": {
                      "type": "short-text",
                      "label": "Email Address"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "testimonial": {
      "type": "page",
      "title": "Testimonials Page",
      "sections": {
        "main": {
          "title": "Testimonials Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description"
            },
            "items": {
              "type": "array",
              "label": "Testimonial Items",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Person Name"
                },
                "profession": {
                  "type": "short-text",
                  "label": "Profession"
                },
                "image": {
                  "type": "image",
                  "label": "Person Image"
                },
                "text": {
                  "type": "long-text",
                  "label": "Testimonial Text"
                }
              }
            }
          }
        }
      }
    },
    "appointment": {
      "type": "page",
      "title": "Appointment Page",
      "sections": {
        "main": {
          "title": "Appointment Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description"
            },
            "form": {
              "type": "object",
              "fields": {
                "fields": {
                  "type": "array",
                  "items": {
                    "name": {
                      "type": "short-text",
                      "label": "Field Name"
                    },
                    "label": {
                      "type": "short-text",
                      "label": "Field Label"
                    },
                    "type": {
                      "type": "select",
                      "options": [
                        "text",
                        "email",
                        "tel",
                        "number",
                        "date",
                        "textarea"
                      ]
                    }
                  }
                },
                "submit_text": {
                  "type": "short-text",
                  "label": "Submit Button Text"
                }
              }
            }
          }
        }
      }
    },
    "call_to_action": {
      "type": "page",
      "title": "Call to Action Page",
      "sections": {
        "main": {
          "title": "CTA Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description"
            },
            "points": {
              "type": "array",
              "items": {
                "type": "short-text"
              }
            },
            "cta": {
              "type": "object",
              "fields": {
                "text": {
                  "type": "short-text",
                  "label": "Button Text"
                },
                "url": {
                  "type": "short-text",
                  "label": "Button URL"
                }
              }
            }
          }
        }
      }
    },
    "contact": {
      "type": "page",
      "title": "Contact Page",
      "sections": {
        "info": {
          "title": "Contact Information",
          "fields": {
            "address": {
              "type": "object",
              "fields": {
                "street": {
                  "type": "short-text",
                  "label": "Street Address",
                  "required": true
                },
                "city": {
                  "type": "short-text",
                  "label": "City",
                  "required": true
                },
                "country": {
                  "type": "short-text",
                  "label": "Country",
                  "required": true
                }
              }
            },
            "phone": {
              "type": "object",
              "fields": {
                "main": {
                  "type": "short-text",
                  "label": "Main Phone",
                  "required": true
                },
                "admissions": {
                  "type": "short-text",
                  "label": "Admissions Phone"
                }
              }
            },
            "email": {
              "type": "object",
              "fields": {
                "info": {
                  "type": "short-text",
                  "label": "Info Email",
                  "required": true
                },
                "admissions": {
                  "type": "short-text",
                  "label": "Admissions Email",
                  "required": true
                },
                "careers": {
                  "type": "short-text",
                  "label": "Careers Email"
                }
              }
            },
            "business_hours": {
              "type": "object",
              "fields": {
                "weekdays": {
                  "type": "object",
                  "fields": {
                    "days": {
                      "type": "short-text",
                      "label": "Weekdays"
                    },
                    "hours": {
                      "type": "short-text",
                      "label": "Hours"
                    }
                  }
                },
                "weekend": {
                  "type": "object",
                  "fields": {
                    "days": {
                      "type": "short-text",
                      "label": "Weekend Days"
                    },
                    "hours": {
                      "type": "short-text",
                      "label": "Hours"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    }
  }
}