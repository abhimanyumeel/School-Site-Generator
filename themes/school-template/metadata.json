{
  "theme": "school-temp",
  "displayName": "school-template",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "terms-of-service": {
      "type": "page",
      "title": "Terms of Service",
      "sections": {
        "main": {
          "title": "Terms Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "minLength": 1,
              "required": true,
              "default": "Terms of Service"
            },
            "last_updated": {
              "type": "short-text",
              "label": "Last Updated Date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "required": true,
              "default": "2024-01-01"
            },
            "related_documents": {
              "type": "array",
              "label": "Related Documents",
              "items": {
                "type": "object",
                "fields": {
                  "name": {
                    "type": "short-text",
                    "label": "Document Name",
                    "required": true,
                    "default": "Privacy Policy"
                  },
                  "url": {
                    "type": "short-text",
                    "label": "Document URL",
                    "required": true,
                    "default": "/privacy-policy"
                  },
                  "icon": {
                    "type": "short-text",
                    "label": "Document Icon Class",
                    "required": true,
                    "default": "fas fa-file-alt"
                  }
                }
              }
            },
            "contact_info": {
              "type": "object",
              "label": "Contact Information",
              "fields": {
                "email": {
                  "type": "short-text",
                  "label": "Contact Email",
                  "format": "email",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "label": "Contact Phone",
                  "required": true
                },
                "address": {
                  "type": "short-text",
                  "label": "Contact Address",
                  "required": true
                }
              }
            },
            "sections": {
              "type": "array",
              "label": "Terms Sections",
              "items": {
                "type": "object",
                "fields": {
                  "title": {
                    "type": "short-text",
                    "label": "Section Title",
                    "required": true,
                    "default": "General Terms"
                  },
                  "content": {
                    "type": "long-text",
                    "label": "Section Content",
                    "default": "These terms and conditions outline the rules and regulations for the use of our school's website."
                  },
                  "items": {
                    "type": "array",
                    "label": "Section Items",
                    "items": {
                      "type": "long-text",
                      "default": "By accessing this website, you accept these terms and conditions in full."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    },
    "file": {
      "allowedTypes": ["application/pdf"],
      "maxSize": 10485760
    }
  }
}
