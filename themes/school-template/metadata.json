{
  "theme": "school-temp",
  "displayName": "school-template",
  "description": "A modern and clean Hugo theme for school websites",
  "version": "1.0.0",
  "pages": {
    "global": {
      "type": "page",
      "title": "Global Settings",
      "sections": {
        "site_name": {
          "title": "Site Name",
          "fields": {
            "name": {
              "type": "short-text",
              "label": "School Name",
              "required": true
            }
          }
        },
        "site_logo": {
          "title": "Site Logo",
          "fields": {
            "icon": {
              "type": "image",
              "label": "Logo Icon",
              "required": true,
              "description": "Font Awesome icon class"
            },
            "text": {
              "type": "short-text",
              "label": "Logo Text",
              "required": true,
              "description": "Logo text"
            }
          }
        },
        "navigation": {
          "title": "Navigation",
          "fields": {
            "main_menu": {
              "type": "array",
              "label": "Main Menu Items",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Menu Item Name"
                },
                "url": {
                  "type": "short-text",
                  "label": "Menu Item URL"
                },
                "type": {
                  "type": "select",
                  "label": "Menu Type",
                  "options": ["link", "dropdown"]
                }
              }
            }
          }
        },
        "footer": {
          "title": "Footer",
          "fields": {
            "contact": {
              "type": "object",
              "label": "Contact Section",
              "fields": {
                "title": {
                  "type": "short-text",
                  "label": "Contact Section Title",
                  "default": "Get in Touch"
                },
                "address": {
                  "type": "short-text",
                  "label": "Address",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "label": "Phone Number",
                  "required": true
                },
                "email": {
                  "type": "short-text",
                  "label": "Email Address",
                  "required": true
                }
              }
            },
            "social_links": {
              "type": "array",
              "label": "Social Links",
              "items": {
                "icon": {
                  "type": "short-text",
                  "label": "Font Awesome Icon Class",
                  "required": true
                },
                "url": {
                  "type": "short-text",
                  "label": "Social Media URL",
                  "required": true
                }
              }
            },
            "quick_links": {
              "type": "object",
              "title": "Quick Links`",
              "fields": {
                "name": {
                  "type": "short-text",
                  "label": "Quick Links Title",
                  "default": "Quick Links"
                },
                "url": {
                  "type": "short-text",
                  "label": "Link URL",
                  "required": true
                }
              }
            },
            "copyright": {
              "type": "object",
              "label": "Copyright Section",
              "fields": {
                "text": {
                  "type": "short-text",
                  "label": "Copyright Text",
                  "required": true,
                  "default": "Your School Name. All Rights Reserved."
                }
              }
            }
          }
        }
      }
    },
    "home": {
      "type": "page",
      "title": "Home Page",
      "sections": {
        "hero": {
          "title": "Hero Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Hero Title",
              "required": true,
              "default": "Welcome to Our School"
            },
            "subtitle": {
              "type": "short-text",
              "label": "Hero Subtitle",
              "required": true,
              "default": "Nurturing Minds, Building Futures"
            },
            "description": {
              "type": "long-text",
              "label": "Hero Description",
              "required": true,
              "default": "We provide quality education with a focus on academic excellence and character development. Join us in creating a bright future for your child."
            },
            "image": {
              "type": "image",
              "label": "Hero Background Image",
              "required": true,
              "description": "Large background image for hero section (recommended: 1920x1080px)"
            },
            "cta": {
              "type": "object",
              "label": "Call to Action",
              "fields": {
                "primary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Primary Button Text",
                      "default": "Apply Now"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Primary Button URL",
                      "default": "/admissions"
                    }
                  }
                },
                "secondary": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Secondary Button Text",
                      "default": "Learn More"
                    },
                    "url": {
                      "type": "short-text",
                      "label": "Secondary Button URL",
                      "default": "/about"
                    }
                  }
                }
              }
            }
          }
        },
        "notices": {
          "title": "Notice Board Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Notice Board Title",
              "required": true,
              "default": "Latest Announcements"
            },
            "items": {
              "type": "array",
              "label": "Notice Items",
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Notice Title",
                  "required": true
                },
                "link": {
                  "type": "short-text",
                  "label": "Notice Link",
                  "required": true
                }
              }
            }
          }
        },
        "events": {
          "title": "Events Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Events Section Title",
              "required": true,
              "default": "Upcoming Events"
            },
            "description": {
              "type": "long-text",
              "label": "Events Section Description",
              "required": true,
              "default": "Stay updated with our school events and activities. Join us in making learning fun and engaging."
            },
            "items": {
              "type": "array",
              "label": "Event Items",
              "default": [
                {
                  "title": "Annual Sports Day",
                  "description": "Join us for a day of sports and athletic excellence",
                  "date": "2024-03-15",
                  "image": "/defaults/sports-day.jpg"
                },
                {
                  "title": "Science Exhibition",
                  "description": "Showcasing innovative projects by our young scientists",
                  "date": "2024-03-20",
                  "image": "/defaults/science-fair.jpg"
                }
              ],
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Event Title",
                  "required": true
                },
                "description": {
                  "type": "long-text",
                  "label": "Event Description",
                  "required": true
                },
                "date": {
                  "type": "short-text",
                  "label": "Event Date",
                  "required": true
                },
                "image": {
                  "type": "image",
                  "label": "Event Image",
                  "required": true
                }
              }
            }
          }
        }
      }
    },
    "admission": {
      "type": "page",
      "title": "Admission Page",
      "sections": {
        "welcome": {
          "title": "Welcome Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Welcome Section Title",
              "minLength": 1,
              "required": true,
              "default": "Welcome to Our Admissions"
            },
            "description": {
              "type": "long-text",
              "label": "Welcome Description Paragraphs",
              "default": "We are delighted that you are considering our school for your child's education. Our admission process is designed to be straightforward and transparent. Please read through the information below and feel free to contact us with any questions."
            }
          }
        },
        "contact_info": {
          "title": "Contact Information",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Contact Section Title",
              "required": true,
              "default": "Contact Information"
            },
            "contacts": {
              "type": "array",
              "label": "Contact Persons",

              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Contact Name",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "label": "Phone Number",
                  "required": true
                }
              }
            }
          }
        }
      }
    },
    "about": {
      "type": "page",
      "title": "About Page",
      "sections": {
        "main": {
          "title": "Main Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Page Description",
              "minLength": 5,
              "default": "We are a leading educational institution dedicated to providing quality education and nurturing the next generation of leaders."
            },
            "mission": {
              "type": "long-text",
              "label": "Mission Statement",
              "minLength": 5,
              "default": "Our mission is to provide a comprehensive and innovative educational experience that empowers students to achieve their full potential and contribute positively to society."
            },
            "vision": {
              "type": "long-text",
              "label": "Vision Statement",
              "minLength": 5
            }
          }
        },
        "team": {
          "title": "Team Section",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Section Title",
              "required": true,
              "default": "Our Faculty"
            },
            "description": {
              "type": "long-text",
              "label": "Section Description",
              "required": true,
              "default": "Meet our experienced and dedicated faculty members"
            },
            "members": {
              "type": "array",
              "label": "Team Members",
              "items": {
                "name": {
                  "type": "short-text",
                  "label": "Member Name",
                  "required": true
                },
                "position": {
                  "type": "short-text",
                  "label": "Position",
                  "required": true
                },
                "image": {
                  "type": "image",
                  "label": "Member Image"
                }
              }
            }
          }
        }
      }
    },
    "contact": {
      "type": "page",
      "title": "Contact Page",
      "sections": {
        "main": {
          "title": "Contact Information",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "minLength": 1,
              "default": "Contact Us",
              "required": true
            },
            "description": {
              "type": "long-text",
              "label": "Contact Description",
              "minLength": 5,
              "default": "Get in touch with us for any questions or inquiries",
              "required": true
            },
            "info": {
              "type": "object",
              "label": "Contact Information",
              "fields": {
                "address": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "long-text",
                      "label": "Address Text",
                      "required": true
                    }
                  }
                },
                "email": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Email Address",
                      "format": "email",
                      "required": true
                    }
                  }
                },
                "phone": {
                  "type": "object",
                  "fields": {
                    "text": {
                      "type": "short-text",
                      "label": "Phone Number",
                      "required": true
                    }
                  }
                }
              }
            },
            "form": {
              "type": "object",
              "label": "Contact Form",
              "fields": {
                "note": {
                  "type": "long-text",
                  "label": "Form Note",
                  "required": true
                }
              }
            },
            "map_embed_url": {
              "type": "short-text",
              "label": "Map Embed URL",
              "format": "uri",
              "description": "Google Maps embed URL for your location",
              "required": true
            }
          }
        }
      }
    },
    "terms_of_service": {
      "type": "page",
      "title": "Terms of Service",
      "sections": {
        "main": {
          "title": "Terms Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "minLength": 1,
              "required": true,
              "default": "Terms of Service"
            },
            "last_updated": {
              "type": "short-text",
              "label": "Last Updated Date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "required": true,
              "default": "2024-01-01"
            },

            "contact_info": {
              "type": "object",
              "label": "Contact Information",
              "fields": {
                "email": {
                  "type": "short-text",
                  "label": "Contact Email",
                  "format": "email",
                  "required": true
                },
                "phone": {
                  "type": "short-text",
                  "label": "Contact Phone",
                  "required": true
                },
                "address": {
                  "type": "short-text",
                  "label": "Contact Address",
                  "required": true
                }
              }
            },
            "sections": {
              "type": "array",
              "label": "Terms Sections",
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Section Title",
                  "required": true,
                  "default": "General Terms"
                },
                "content": {
                  "type": "long-text",
                  "label": "Section Content",
                  "default": "These terms and conditions outline the rules and regulations for the use of our school's website."
                },
                "items": {
                  "type": "array",
                  "label": "Section Items",
                  "items": {
                    "type": "long-text",
                    "default": "By accessing this website, you accept these terms and conditions in full."
                  }
                }
              }
            }
          }
        }
      }
    },
    "privacy_policy": {
      "type": "page",
      "title": "Privacy Policy",
      "sections": {
        "main": {
          "title": "Privacy Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "minLength": 1,
              "required": true,
              "default": "Privacy Policy"
            },
            "last_updated": {
              "type": "short-text",
              "label": "Last Updated Date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "required": true,
              "default": "2024-01-01"
            },
            "sections": {
              "type": "array",
              "label": "Privacy Policy Sections",
              "items": {
                "title": {
                  "type": "short-text",
                  "label": "Section Title",
                  "required": true,
                  "default": "General Terms"
                },
                "content": {
                  "type": "long-text",
                  "label": "Section Content",
                  "default": "These terms and conditions outline the rules and regulations for the use of our school's website."
                },
                "items": {
                  "type": "array",
                  "label": "Section Items",
                  "items": {
                    "type": "long-text",
                    "default": "By accessing this website, you accept these terms and conditions in full."
                  }
                }
              }
            }
          }
        }
      }
    },
    "mandatory_disclosure": {
      "type": "page",
      "title": "Mandatory Disclosure",
      "sections": {
        "main": {
          "title": "Disclosure Content",
          "fields": {
            "last_updated": {
              "type": "short-text",
              "label": "Last Updated Date",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "default": "2024-01-01"
            },
            "school_info": {
              "type": "object",
              "label": "School Information",
              "fields": {
                "school_name": {
                  "type": "short-text",
                  "label": "School Name",
                  "minLength": 1,
                  "default": "Example School"
                },
                "affiliation_number": {
                  "type": "short-text",
                  "label": "Affiliation Number",
                  "minLength": 1,
                  "default": "ABC12345"
                },
                "school_code": {
                  "type": "short-text",
                  "label": "School Code",
                  "minLength": 1,
                  "default": "12345"
                },
                "address": {
                  "type": "long-text",
                  "label": "Address",
                  "minLength": 1,
                  "default": "123 School Street, Education City, ST 12345"
                },
                "principal_name": {
                  "type": "short-text",
                  "label": "Principal Name",
                  "minLength": 1,
                  "default": "Dr. John Smith"
                },
                "contact_details": {
                  "type": "long-text",
                  "label": "Contact Details",
                  "minLength": 1,
                  "default": "Phone: +1 (555) 123-4567\nEmail: contact@school.edu"
                }
              }
            },
            "infrastructure": {
              "type": "array",
              "label": "Infrastructure Details",
              "items": {
                "facility_type": {
                  "type": "short-text",
                  "label": "Facility"
                },
                "details": {
                  "type": "long-text",
                  "label": "Details"
                }
              }
            },
            "faculty_info": {
              "type": "array",
              "label": "Faculty Information",
              "items": {
                "department": {
                  "type": "short-text",
                  "label": "Department",
                  "minLength": 1
                },
                "total_teachers": {
                  "type": "short-text",
                  "label": "Total Teachers",
                  "minLength": 1
                },
                "qualification": {
                  "type": "short-text",
                  "label": "Qualification",
                  "minLength": 1
                },
                "experience_range": {
                  "type": "short-text",
                  "label": "Experience Range",
                  "minLength": 1
                }
              }
            },
            "fee_structure": {
              "type": "array",
              "label": "Fee Structure",
              "items": {
                "class": {
                  "type": "short-text",
                  "label": "Class",
                  "minLength": 1
                },
                "admission_fee": {
                  "type": "short-text",
                  "label": "Admission Fee",
                  "minLength": 1
                },
                "tuition_fee": {
                  "type": "short-text",
                  "label": "Tuition Fee (Monthly)",
                  "minLength": 1
                },
                "other_charges": {
                  "type": "short-text",
                  "label": "Other Charges",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "tc": {
      "type": "page",
      "title": "Transfer Certificate",
      "sections": {
        "main": {
          "title": "TC Content",
          "fields": {
            "title": {
              "type": "short-text",
              "label": "Page Title",
              "minLength": 1,
              "required": true,
              "default": "Transfer Certificate Application"
            },
            "subtitle": {
              "type": "short-text",
              "label": "Page Subtitle",
              "minLength": 1,
              "required": true,
              "default": "Request Your Transfer Certificate"
            },
            "description": {
              "type": "long-text",
              "label": "Page Description",
              "minLength": 10,
              "required": true,
              "default": "Fill out the form below to request your Transfer Certificate. Please ensure all information is accurate."
            },

            "form": {
              "type": "object",
              "label": "TC Form Configuration",
              "fields": {
                "title": {
                  "type": "short-text",
                  "label": "Form Title",
                  "required": true,
                  "default": "TC Request Form"
                }
              }
            }
          }
        }
      }
    }
  },

  "config": {
    "colors": {
      "primary": "#2563eb",
      "secondary": "#1e40af",
      "text": "#1f2937",
      "background": "#f3f4f6"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "fieldTypes": {
    "image": {
      "allowedTypes": ["image/jpeg", "image/png", "image/webp"],
      "maxSize": 5242880,
      "compressionOptions": {
        "quality": 80,
        "format": "webp"
      },
      "thumbnails": {
        "small": {
          "width": 300,
          "height": 300
        },
        "medium": {
          "width": 800,
          "height": 600
        },
        "large": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "image-set": {
      "extends": "image",
      "sortable": true,
      "bulkUpload": true
    },
    "file": {
      "allowedTypes": ["application/pdf"],
      "maxSize": 10485760
    }
  }
}
